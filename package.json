{
  "name": "typeberry",
  "version": "0.0.1",
  "description": "JAM implementation in TypeScript",
  "main": "index.ts",
  "private": true,
  "workspaces": [
    "packages/trie",
    "packages/pvm",
    "packages/safrole",
    "packages/bytes",
    "packages/jam-codec",
    "packages/utils",
    "packages/stubs",
    "bin/test-runner",
    "tools/commit-hash",
    "tools/pvm-builder"
  ],
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "qa": "biome ci",
    "qa-fix": "npm run format; npm run lint",
    "format": "biome format --write",
    "lint": "biome lint --write; biome check --write",
    "run": "ts-node ./index.ts",
    "run-pvm": "ts-node ./bin/pvm.ts",
    "run-tests": "ts-node ./bin/test-runner.ts",
    "test": "node --test --require ts-node/register $(find . -type d -name node_modules -prune -type f -o -name '*.test.ts' | tr '\\n' ' ')",
    "ts-node": "ts-node",
    "blockchain-git-log": "ts-node ./tools/commit-hash/index.ts",
    "build-pvm": "npm run build -w tools/pvm-builder",
    "preobfuscate-pvm": "npm run build-pvm",
    "obfuscate-pvm": "npx javascript-obfuscator ./dist/pvm --output ./dist/pvm-obfuscated --compact true --control-flow-flattening true"
  },
  "author": "Fluffy Labs",
  "license": "MPL-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "ts-node": "^10.9.2"
  }
}
