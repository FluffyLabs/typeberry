{
  "name": "typeberry",
  "version": "0.0.1",
  "description": "JAM implementation in TypeScript",
  "private": false,
  "keywords": ["jam", "blockchain", "polkadot", "typescript", "web3"],
  "homepage": "https://fluffylabs.github.io/typeberry",
  "repository": {
    "type": "git",
    "url": "https://github.com/fluffylabs/typeberry.git"
  },
  "bugs": {
    "url": "https://github.com/fluffylabs/typeberry/issues"
  },
  "workspaces": [
    "bin/jam",
    "bin/pvm",
    "bin/test-runner",
    "bin/rpc",
    "extensions/ipc",
    "packages/core/bytes",
    "packages/core/codec",
    "packages/core/collections",
    "packages/core/concurrent",
    "packages/core/crypto",
    "packages/core/erasure-coding",
    "packages/core/hash",
    "packages/core/json-parser",
    "packages/core/logger",
    "packages/core/mmr",
    "packages/core/networking",
    "packages/core/numbers",
    "packages/core/ordering",
    "packages/core/pvm-debugger-adapter",
    "packages/core/pvm-interpreter",
    "packages/core/pvm-program",
    "packages/core/pvm-spi-decoder",
    "packages/core/shuffling",
    "packages/core/state-machine",
    "packages/core/trie",
    "packages/core/utils",
    "packages/jam/block",
    "packages/jam/block-json",
    "packages/jam/config",
    "packages/jam/config/net",
    "packages/jam/database",
    "packages/jam/database-lmdb",
    "packages/jam/jam-host-calls",
    "packages/jam/pvm-host-calls",
    "packages/jam/safrole",
    "packages/jam/state",
    "packages/jam/state-merkleization",
    "packages/jam/transition",
    "packages/jam/transition/disputes",
    "tools/benchmark",
    "tools/builder",
    "tools/commit-hash",
    "tools/ipc2rpc",
    "workers/block-generator",
    "workers/generic",
    "workers/importer",
    "packages/jam/state-json"
  ],
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "main": "dist/typeberry.cjs",
  "bin": {
    "typeberry": "dist/typeberry.cjs"
  },
  "scripts": {
    "build": "rollup -c && npm run post-build",
    "post-build": "npm run copy-wasm && npm run create-symlink",
    "copy-wasm": "cp node_modules/ed25519-wasm/pkg/ed25519_wasm_bg.wasm dist/ && cp node_modules/bandersnatch-wasm/pkg/bandersnatch_wasm_bg.wasm dist/ && cp node_modules/reed-solomon-wasm/pkg/reed_solomon_wasm_bg.wasm dist/",
    "create-symlink": "node scripts/create-symlink.cjs",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm publish",
    "publish:github": "npm publish --registry=https://npm.pkg.github.com",
    "publish:both": "npm run publish:npm && npm run publish:github",
    "release": "./scripts/publish.sh",
    "release:patch": "./scripts/publish.sh --version patch",
    "release:minor": "./scripts/publish.sh --version minor",
    "release:major": "./scripts/publish.sh --version major",
    "build-tsc": "tsc",
    "qa": "biome ci && eslint .",
    "qa-fix": "npm run format; npm run lint",
    "format": "biome format --write",
    "lint": "biome lint --write; biome check --write",
    "start": "npm start -w @typeberry/jam --",
    "test": "tsx --test $(find . -type d -name node_modules -prune -type f -o -name '*.test.ts' | tr '\\n' ' ')",
    "test-only": "node --test-only --import tsx $(find . -type d -name node_modules -prune -type f -o -name '*.test.ts' | tr '\\n' ' ')",
    "reader-notes": "npx @fluffylabs/links-check --ignore-file=.gitignore --generate-notes ./web/links.json --generate-notes-label typeberry-$(git rev-parse --short HEAD) **/*.ts"
  },
  "author": "Fluffy Labs",
  "license": "MPL-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@eslint/js": "^9.12.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.12.0",
    "eslint-plugin-import": "^2.31.0",
    "rollup": "^4.43.0",
    "tslib": "^2.8.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.9.0"
  },
  "type": "module",
  "files": [
    "dist/typeberry.cjs",
    "dist/*.wasm",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
