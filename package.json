{
  "name": "typeberry",
  "version": "0.0.1",
  "description": "JAM implementation in TypeScript",
  "private": true,
  "workspaces": [
    "bin/jam",
    "bin/test-runner",
    "extensions/ipc",
    "packages/block",
    "packages/bytes",
    "packages/codec",
    "packages/collections",
    "packages/database",
    "packages/erasure-coding",
    "packages/hash",
    "packages/json-parser",
    "packages/logger",
    "packages/numbers",
    "packages/pvm/debugger-adapter",
    "packages/pvm/host-calls",
    "packages/pvm/host-calls-jam",
    "packages/pvm/interpreter",
    "packages/pvm/program",
    "packages/pvm/spi-decoder",
    "packages/safrole",
    "packages/state-machine",
    "packages/transition",
    "packages/trie",
    "packages/utils",
    "tools/benchmark",
    "tools/builder",
    "tools/commit-hash",
    "tools/ipc2rpc",
    "workers/block-generator",
    "workers/generic",
    "workers/importer"
  ],
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "scripts": {
    "build": "tsc",
    "qa": "biome ci; eslint .",
    "qa-fix": "npm run format; npm run lint",
    "format": "biome format --write",
    "lint": "biome lint --write; biome check --write",
    "start": "npm start -w @typeberry/jam",
    "test": "node --test --require ts-node/register $(find . -type d -name node_modules -prune -type f -o -name '*.test.ts' | tr '\\n' ' ')",
    "test-only": "node --test-only --require ts-node/register $(find . -type d -name node_modules -prune -type f -o -name '*.test.ts' | tr '\\n' ' ')"
  },
  "author": "Fluffy Labs",
  "license": "MPL-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@tsconfig/node20": "^20.1.4",
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.12.0",
    "eslint-plugin-import": "^2.31.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0"
  }
}
