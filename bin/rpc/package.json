{
  "name": "@typeberry/rpc",
  "version": "0.0.4",
  "description": "A JSON RPC server for Typeberry. Spec: https://hackmd.io/@polkadot/jip2",
  "license": "MPL-2.0",
  "author": "Fluffy Labs",
  "type": "module",
  "main": "index.ts",
  "bin": {
    "rpc": "index.ts"
  },
  "scripts": {
    "start": "tsx ./index.ts",
    "test": "tsx --test $(find . -type f -name '*.test.ts' | tr '\\n' ' ')",
    "test:e2e-setup": "GP_VERSION=0.7.0 tsx ./test/e2e-setup.ts",
    "test:e2e": "npm run test:e2e-setup && GP_VERSION=0.7.0 tsx --test ./test/e2e.ts"
  },
  "dependencies": {
    "@typeberry/block": "0.0.4",
    "@typeberry/bytes": "0.0.4",
    "@typeberry/codec": "0.0.4",
    "@typeberry/config": "0.0.4",
    "@typeberry/config-node": "0.0.4",
    "@typeberry/database-lmdb": "0.0.4",
    "@typeberry/hash": "0.0.4",
    "@typeberry/jam": "0.0.4",
    "@typeberry/logger": "0.0.4",
    "@typeberry/node": "0.0.4",
    "@typeberry/numbers": "0.0.4",
    "@typeberry/state": "0.0.4",
    "@types/ws": "8.18.1",
    "minimist": "1.2.8",
    "ws": "8.18.2",
    "zod": "3.25.30"
  }
