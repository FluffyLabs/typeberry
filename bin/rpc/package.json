{
  "name": "@typeberry/rpc",
  "version": "0.1.2",
  "description": "A JSON RPC server for Typeberry. Spec: https://hackmd.io/@polkadot/jip2",
  "license": "MPL-2.0",
  "author": "Fluffy Labs",
  "type": "module",
  "main": "index.ts",
  "bin": {
    "rpc": "index.ts"
  },
  "scripts": {
    "start": "NODE_ENV=development tsx ./index.ts",
    "test": "tsx --test $(find . -type f -name '*.test.ts' | tr '\\n' ' ')",
    "test:e2e-setup": "NODE_ENV=development GP_VERSION=0.7.0 tsx ./test/e2e-setup.ts",
    "test:e2e": "npm run test:e2e-setup && GP_VERSION=0.7.0 tsx --test ./test/e2e.ts"
  },
  "dependencies": {
    "@typeberry/block": "*",
    "@typeberry/bytes": "*",
    "@typeberry/codec": "*",
    "@typeberry/config": "*",
    "@typeberry/config-node": "*",
    "@typeberry/database-lmdb": "*",
    "@typeberry/hash": "*",
    "@typeberry/jam": "*",
    "@typeberry/logger": "*",
    "@typeberry/node": "*",
    "@typeberry/numbers": "*",
    "@typeberry/state": "*",
    "@typeberry/utils": "*",
    "@types/ws": "8.18.1",
    "minimist": "1.2.8",
    "ws": "8.18.2",
    "zod": "3.25.30"
  }
}
