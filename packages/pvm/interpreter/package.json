{
  "name": "@typeberry/pvm-interpreter",
  "version": "0.0.1",
  "description": "A PVM implementation based on the Gray Paper.",
  "main": "index.ts",
  "dependencies": {
    "@typeberry/bytes": "0.0.1",
    "@typeberry/codec": "0.0.1",
    "@typeberry/numbers": "0.0.1",
    "@typeberry/utils": "0.0.1"
  },
  "scripts": {
    "start": "ts-node ./bin.ts",
    "test": "node --test --require ts-node/register $(find . -type f -name 'math-utils.test.ts' | tr '\\n' ' ')",
    "build": "npm run build -w @typeberry/builder -- --environment PACKAGE_NAME:@typeberry/pvm-debugger-adapter,PACKAGE_OUT:pvm",
    "preobfuscate": "npm run build",
    "obfuscate": "npx javascript-obfuscator ../../../dist/pvm --output ../../../dist/pvm-obfuscated --compact true --control-flow-flattening true && npm run cp-package-json && npm run cp-types",
    "cp-package-json": "cp ../../../dist/pvm/package.json ../../../dist/pvm-obfuscated/",
    "cp-types": "cp ../../../dist/pvm/*.d.ts ../../../dist/pvm-obfuscated/"
  },
  "author": "Fluffy Labs",
  "license": "MPL-2.0"
}
