{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Block Schema",
  "description": "Schema for genesis block header",
  "type": "object",
  "required": ["parent", "parent_state_root", "extrinsic_hash", "slot", "epoch_mark", "offenders_mark", "author_index", "entropy_source", "seal"],
  "properties": {
    "parent": {
      "type": "string",
      "description": "Parent block header hash as hex string",
      "pattern": "^(?:0x)?[0-9a-fA-F]+$",
      "minLength": 1
},
    "parent_state_root": {
      "type": "string",
      "description": "Parent block state root hash as hex string",
      "pattern": "^(?:0x)?[0-9a-fA-F]+$",
      "minLength": 1
    },
    "extrinsic_hash": {
      "type": "string",
      "description": "Block extrinsic hash as hex string",
      "pattern": "^(?:0x)?[0-9a-fA-F]+$",
      "minLength": 1
    },
    "slot": {
      "type": "number",
      "description": "Count of slots since the start of JAM Common Era",
      "minimum": 0
    },
    "epoch_mark": {
      "type": "object",

    }
  },
  "additionalProperties": false
}
